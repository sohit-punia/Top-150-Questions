202. Happy Number


class Solution {
    int getDigit(int n){
        int sum = 0;
        while(n > 0){
            int digit = n % 10;
            sum += digit * digit;
            n = n / 10;
        }
        return sum;
    }
public:
    bool isHappy(int n) {
        unordered_set<int> st;
        while(n != 1){
            if(st.count(n)) return false;
            st.insert(n);
            n = getDigit(n);
        }
        return true;

    }
};
