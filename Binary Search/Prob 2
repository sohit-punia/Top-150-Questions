74. Search a 2D Matrix

    bool searchMatrix(vector<vector<int>>& matrix, int target) {
        int n = matrix.size();
        int m = matrix[0].size();
        int low = 0;
        int high = m * n -1;
        while(low <= high){
            int mid = low + (high - low) / 2;
            //we want to convert a 1D index mid â†’ back to 2D coordinates (row, col)
            // here we will divide by m not n bec. each row has m elements, not n.
            int row = mid / m;
            int col = mid % m;

            int val = matrix[row][col];
            if (val == target) return true;
            else if(val < target) low = mid + 1;
            else high = mid - 1;
        }
        return false;
    }
